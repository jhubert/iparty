<% if user_signed_in? %>
<p><%= link_to 'Check in to a party', guest_path %></p>

<p><%= link_to 'Manage a party', events_path %></p>

<h2>Your Donations</h2>
  <table class='table table-striped table-bordered'>
    <thead>
      <tr>
        <th>Party</th>
        <th>Date</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
    <% current_user.donations.each do |donation| %>
      <tr>
        <td><%= donation.description %></td>
        <td><%= donation.created_at.strftime("%m/%d/%y %I:%M%p") %></td>
        <td><%= number_to_currency((donation.amount || 0).to_i/100) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
<h1>Welcome</h1>

<%= link_to "Sign in with Facebook", '/users/auth/facebook' %>
<% end %>
